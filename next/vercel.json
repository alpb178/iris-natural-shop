{
  "framework": "nextjs",
  "buildCommand": "cd next && npm run build",
  "outputDirectory": "next/.next",
  "installCommand": "cd next && npm install",
  "devCommand": "cd next && npm run dev",
  "env": {
    "NEXT_PUBLIC_API_URL": "@next_public_api_url",
    "NEXT_PUBLIC_STRAPI_URL": "@next_public_strapi_url",
    "IMAGE_HOSTNAME": "@image_hostname"
  },
  "functions": {
    "next/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}
